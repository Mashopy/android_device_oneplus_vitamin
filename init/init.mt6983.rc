#use /mnt/oplus/op2 instead
    mkdir /mnt/oplus
    mkdir /mnt/oplus/op2
    restorecon_recursive /mnt/oplus/
    mount ext4 /mnt/vendor/oplusreserve /mnt/oplus/op2 bind
#endif

on fs
